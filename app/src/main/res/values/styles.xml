<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlHighlight">@color/dark_blue</item>
        <item name="colorAccent">@color/light_gray</item>
        <item name="android:textColorHighlight">@color/dark_blue</item>
        <item name="android:textColorPrimaryDisableOnly">@color/dark_blue</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:listDivider">@color/light_gray</item>
        <item name="imageButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:popupBackground">@color/dark_gray</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorPrimaryDark">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorButtonNormal">@color/white</item>
    </style>

    <style name="SpinnerTheme" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>