<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/row_radio_linearLayout"
    android:layout_width="@dimen/tile_size"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/app_horizontal_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/row_radio_name_text_view"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever" />

    <ImageButton
        android:id="@+id/row_radio_preferred_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/title_preferred"
        android:src="@drawable/ic_star_border_black_30dp" />

</LinearLayout>